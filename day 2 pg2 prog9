#include <stdio.h>

int main() {
    int num, count = 0;
    float score = 0.0;

    printf("Enter the numbers\n");

    while (count < 3) {
        scanf("%d", &num);
        printf("%d\n", num); // Echo the input as shown in sample

        if (num < 0) {
            score -= 1;
            break;
        }
        else if (num % 2 != 0) { // odd
            score += 1;
            count++;
        }
        else if (num > 0 && num % 2 == 0) { // positive even
            score -= 0.5;
        }
    }

    printf("%.1f\n", score);

    return 0;
}
