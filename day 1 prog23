#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int a,b,c,x,y;
    scanf("%d %d %d",&a,&b,&c);
    printf("x-coordinate:%d\n",a);
    printf("y-coordinate:%d\n",b);
    printf("Length:%d\n",c);
    x=a+(c/2);
    y=b+(c/2);
    printf("Centre of the ground is at (%d,%d)",x,y);
    return 0;
}
